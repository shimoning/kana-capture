{
  "name": "@shimoning/kana-capture",
  "version": "0.2.0",
  "description": "Kana Japanese characters capturer and converter",
  "keywords": [
    "japanese",
    "kana",
    "hiragana",
    "katakana",
    "hankaku",
    "zenkaku",
    "capture",
    "converter"
  ],
  "author": "Shimon Haga",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shimoning/kana-capture.git"
  },
  "bugs": {
    "url": "https://github.com/shimoning/kana-capture/issues"
  },
  "homepage": "https://shimoning.github.io/kana-capture/",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/cjs/index.js",
  "main:umd": "dist/umd/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js",
    "default": "./dist/cjs/index.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "clean:dist": "rimraf dist",
    "lint": "eslint './src/**/*.{js,ts}'",
    "lint:fix": "eslint --fix './src/**/*.{js,ts}'"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.13.1",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.5.0"
  }
}
